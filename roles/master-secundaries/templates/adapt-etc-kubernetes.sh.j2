#!/bin/sh

cd /etc/kubernetes


PRIMARY_MASTER_FQDN="`echo "{{ master }}" | sed 's/\./\\./g'`"



PRIMARY_MASTER_IP="`getent hosts {{ master }} | awk '{ print $1 }' | sed 's/\./\\./g'`"


perl -pi -e "s/${PRIMARY_MASTER_FQDN}/{{ ansible_fqdn }}/g; s/(server: *https:\/\/|--advertise-address=host: *)${PRIMARY_MASTER_IP}/\${1}{{ ansible_default_ipv4.address }}/g"  *.* manifests/*.*
